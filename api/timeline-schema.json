{
  "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Timeline schema",
	"description": "Defines the timeline input format and thus API",
	"type": "object",
	"properties": {
		"settings": {
			"type": "object",
			"properties": {
				"zoom": {
					"type": "number",
					"minimum": 50,
					"maximum": 300
				},
        "end": {
          "type": "string",
          "pattern": "^\\([0-9]{4}-[0-9]{2}-[0-9]{2}|\\-\\)$"
        }
			}
		},
		"theme": {
			"type": "object",
			"properties": {
				"colorScheme": {
					"type": "string",
          "pattern": "^\\(gradient|duration\\)$"
				}
			}
		},
		"tasks": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
          "start": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "end": {
            "type": "string",
            "pattern": "^\\([0-9]{4}-[0-9]{2}-[0-9]{2}|\\-\\)$"
          },
          "recur": {
            "type": "number",
            "minimum": 1,
            "maximum": 365
          },
          "startTo": {
            "type": "array",
            "items": {
              "type": "number",
              "minimum": 1,
              "maximum": 256
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "endTo": {
            "type": "array",
            "items": {
              "type": "number",
              "minimum": "1",
              "maximum": "256"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "milestones": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "stamps": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
            },
            "minItems": 1,
            "uniqueItems": true
          }
				},
        "required": ["start", "end"]
			},
			"minItems": 1,
			"uniqueItems": true
		},
    "required": ["tasks"]
	}
}
